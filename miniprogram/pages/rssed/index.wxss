.category {
  padding: 24rpx;
  text-align: center;
}

.button{
text-align: center;
}

.zan-col {
  
  background-color: #edae3930;
  height:30vw;
  /* line-height: 25vw; */
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  color: rgba(65, 60, 60, 0.521);
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding-left: 60rpx;
  padding-right: 60rpx;
  align-items: center;

}

.zan-col:nth-child(odd) {
  background-color: #ca8c5240;
}

.avatar {
  position: flex;
  width: 80rpx;
  height: 80rpx;
}

.rss-text{
  position: center;
  flex-direction: column;
  width: 400rpx;
}

.rss-title {
  font-size: 30rpx;
}

.rss-description {
  font-size: 24rpx;
  /* text-align: center; */
  padding-left:60rpx;
  padding-right:60rpx;
}

