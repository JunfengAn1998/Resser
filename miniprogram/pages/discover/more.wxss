.pure_top {
  width:100%;
  height: 180rpx;
  position: relative;
  z-index: 101;
  overflow: hidden;
  margin-top: -120rpx;
}

.pure_top::after {
  content: '';
  width: 140%;
  height: 80px;
  position: absolute;
  left: -20%;
  top: 0;
  z-index: -1;
  border-radius: 0 0 50% 50%;
  background: #3281ff;
}