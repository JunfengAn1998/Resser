<!--pages/rsscenter/rsscenter.wxml-->
<view class="container">
  <!--  搜索框start  -->
  <view class='searchbar'>
    <l-search-bar bind:linconfirm="handleSearch" bind:linblur="handleSearch" bind:linchange="handleSearch" bind:linfocus="handleSearch" clear="{{true}}" placeholder="搜索" />
  </view>


  <!-- 订阅源模块 -->

  <view class="zan-row">
    <block wx:for="{{rssData}}" wx:key="{{index}}">
      <view class="zan-col zan-col-6" wx:if="{{matched[index]}}" bindtap='onTap' data-id='{{index}}'>
        <image class='avatar' mode='aspectFit' src='{{item.favicon}}'></image>
        <view class='rss-text'>
          <view class='rss-title'>{{item.title}}</view>
          <view>--------------</view>
          <view class='rss-description'>{{item.description}}</view>
        </view>
        <l-button l-class="button" shape="square" width='110' bind:lintap='onChange' data-idx='{{index}}'>{{rssed[index]}}</l-button>
      </view>
    </block>
  </view>

  <l-button class="favor" l-class="button" size="long" bind:lintap="navToMy">我的订阅</l-button>

</view>