/* pages/rsscenter/rsscenter.wxss */

.button{
  background:rgba(223, 237, 255, 1) !important;
box-shadow:3rpx 3rpx 16rpx 3px rgba(229, 233, 239, 0.5) !important;
color:rgba(45, 97, 179, 1) !important;
  width: 100%;
}

.favor{
  bottom: 0;
  width: 100%;
  position: fixed;
}
.category {
  padding: 24rpx;
}

.zan-row{
  margin-top:10rpx;
  margin-bottom: 88rpx;
}
.container{
  overflow: visible;
}

.searchbar{
  background-color:white;
  box-shadow:3rpx 3rpx 16rpx 3px rgba(229, 233, 239, 0.5) !important;
  position:sticky;
  top: 0;
}

.zan-col {
  
  background-color: #fff;
  height:30vw;
  /* line-height: 25vw; */
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  color: rgba(65, 60, 60, 0.521);
  /* position: relative; */
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding-left: 60rpx;
  padding-right: 60rpx;
  align-items: center;

}

.zan-col:nth-child(odd) {
  background-color: #F4F6F9;
}

.avatar {
  position: flex;
  width: 100rpx;
  height: 100rpx;
}

.rss-text{
  position: center;
  flex-direction: column;
  width: 400rpx;
}

.rss-title {
  font-size: 30rpx;
}

.rss-description {
  font-size: 24rpx;
  /* text-align: center; */
  padding-left:60rpx;
  padding-right:60rpx;
}

.van-button--default{
  display:inline-block;
  height:60rpx;
  padding:1vh;
  font-size:32rpx;
  line-height:24rpx;
  text-align:center;
  align-items: center;
  justify-content: center;
  vertical-align:middle;
  border-radius:10rpx;
  box-sizing:border-box;
  color:rgba(65, 60, 60, 0.521);
  background-color: #59cbf841;
  border:4rpx solid rgba(255, 255, 255, 0.568)
  }


.rss-item-popup__container {
  padding:12px 24px;
  width:70vw;
}

/* .rss-item-popup__container .avatar {
  width:32rpx;
  height:32rpx;
  vertical-align:bottom;
  margin-right:12rpx;
} */

.rss-header {
  font-size: 24rpx;
  color: #666;
}

.rss-header-txt {
  color: deepskyblue;
}

.description {
  font-size: 28rpx;
  color: #666;
  margin-top: 12px;
}

.sub {
  font-size: 30rpx;
  color: #fff;
  background-color: #39a9ed;
  text-align: center;
  padding: 10rpx 18rpx;
  border-radius: 12rpx;
  float: right;
}

.subed {
  background-color: #09BB07;
}

.rssed {
  position: absolute;
  top: 0;
  right: 0;
  border-radius:50%;
  width: 20px;
  height: 20px;
  text-align: center;
  background-color: #09BB07;
  overflow: hidden;
}

.rssed-icon {
  background:#fff;
}

/* homeindex */
.favicon {
  /* margin-top:20rpx; */
  height: 40rpx;
  width: 40rpx;
}

.rss-info {
  display: flex;
  /* position: relative; */
  flex-direction: row;
  justify-content: flex-end;
  margin-right: 20rpx;
}

.info-title {
  margin-top:20rpx;
  font-size: 22rpx;
  margin-left:0.4ch;
}




