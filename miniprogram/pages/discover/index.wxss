/* pages/rsscenter/rsscenter.wxss */
.container{
  margin: 10rpx;
  overflow: visible;
  margin-bottom: 100rpx;
}

.scroll_box{
width: 100%;
height: 307rpx;
overflow: hidden;
padding: 20rpx;
background: #fff;
white-space: nowrap;
}

.button{
  background:rgba(223, 237, 255, 1) !important;
box-shadow:3rpx 3rpx 16rpx 3px rgba(229, 233, 239, 0.5) !important;
color:rgba(45, 97, 179, 1) !important;
  width: 100%;
}
.source-item{
  width: 25%;
  display: inline-block;
  text-align: center;
  font-size: 26rpx;
  margin-left:20rpx;
  margin-right:20rpx;
}

.cate-list{
  width:100%;
  overflow: hidden;
  white-space: nowrap;
  display:flex;
  flex-direction: row;
  justify-content: space-around;
  overflow-x: auto;
  margin-left:20rpx;
  margin-right: 20rpx;
  /* box-shadow: 5px 10px 5px #fff; */
}

.cate-name {
    font-weight: 700;
    text-align: center;
    font-size: 32rpx;
    color: gray;
    margin: 28px auto;
}

.source-icon {
  width:88rpx;
  height:88rpx;
  box-shadow:0 4rpx 20rpx 0 rgba(212,217,223,.5);
  border-radius:10rpx
}

.favor{
  bottom: 0;
  width: 100%;
  position: fixed;
}
.category {
  padding: 24rpx;
}

.zan-row{
  margin-top:10rpx;
  margin-bottom: 88rpx;
}

.searchbar{
  z-index: 100;
  background-color:white;
  box-shadow:3rpx 3rpx 16rpx 3px rgba(229, 233, 239, 0.5) !important;
  position:sticky;
  top: 0;
}

.rss-text{
  position: center;
  flex-direction: column;
  width: 400rpx;
}

.rss-title {
  font-size: 30rpx;
}

.rss-description {
  font-size: 24rpx;
  /* text-align: center; */
  padding-left:60rpx;
  padding-right:60rpx;
}

.van-button--default{
  display:inline-block;
  height:60rpx;
  padding:1vh;
  font-size:32rpx;
  line-height:24rpx;
  text-align:center;
  align-items: center;
  justify-content: center;
  vertical-align:middle;
  border-radius:10rpx;
  box-sizing:border-box;
  color:rgba(65, 60, 60, 0.521);
  background-color: #59cbf841;
  border:4rpx solid rgba(255, 255, 255, 0.568)
  }


.rss-item-popup__container {
  padding:12px 24px;
  width:70vw;
}

/* .rss-item-popup__container .avatar {
  width:32rpx;
  height:32rpx;
  vertical-align:bottom;
  margin-right:12rpx;
} */

.rss-header {
  font-size: 24rpx;
  color: #666;
}

.rss-header-txt {
  color: deepskyblue;
}

.description {
  font-size: 28rpx;
  color: #666;
  margin-top: 12px;
}

.sub {
  font-size: 30rpx;
  color: #fff;
  background-color: #39a9ed;
  text-align: center;
  padding: 10rpx 18rpx;
  border-radius: 12rpx;
  float: right;
}

.subed {
  background-color: #09BB07;
}

.rssed {
  position: absolute;
  top: 0;
  right: 0;
  border-radius:50%;
  width: 20px;
  height: 20px;
  text-align: center;
  background-color: #09BB07;
  overflow: hidden;
}

.rssed-icon {
  background:#fff;
}

/* homeindex */
.favicon {
  /* margin-top:20rpx; */
  height: 40rpx;
  width: 40rpx;
}

.rss-info {
  display: flex;
  /* position: relative; */
  flex-direction: row;
  justify-content: flex-end;
  margin-right: 20rpx;
}

.info-title {
  margin-top:20rpx;
  font-size: 22rpx;
  margin-left:0.4ch;
}




