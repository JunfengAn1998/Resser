/* pages/rsscenter/rsscenter.wxss */
.category {
    padding: 24rpx;
}

.zan-col {
    background-color: #39a9ed;
    height: 25vw;
    /* line-height: 25vw; */
    text-align: center;
    padding-top: 60rpx;
    color: #fff;
    position: relative;
    display: flex;
    flex-direction: column;
    padding-left: 60rpx;
    padding-right: 60rpx;
}

.zan-col:nth-child(odd) {
    background-color: #66c6f2;
}

.avatar {
    width: 100rpx;
    height: 100rpx;
}

.rss-title {
    font-size: 30rpx;
}

.rss-description {
    font-size: 24rpx;
    /* text-align: center; */
    padding-left: 60rpx;
    padding-right: 60rpx;
}

.rss-add {
    font-size: 48rpx;
}

.rss-item-popup__container {
    padding: 12px 24px;
    width: 70vw;
}

.rss-item-popup__container .avatar {
    width: 32rpx;
    height: 32rpx;
    vertical-align: bottom;
    margin-right: 12rpx;
}

.rss-header {
    font-size: 24rpx;
    color: #666;
}

.rss-header-txt {
    color: deepskyblue;
}

.description {
    font-size: 28rpx;
    color: #666;
    margin-top: 12px;
}

.sub {
    font-size: 30rpx;
    color: #fff;
    background-color: #39a9ed;
    text-align: center;
    padding: 10rpx 18rpx;
    border-radius: 12rpx;
    float: right;
}

.subed {
    background-color: #09BB07;
}

.rssed {
    position: absolute;
    top: 0;
    right: 0;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    text-align: center;
    background-color: #09BB07;
    overflow: hidden;
}

.rssed-icon {
    background: #fff;
}

/* homeindex */
.favicon {
    /* margin-top:20rpx; */
    height: 40rpx;
    width: 40rpx;
}

.rss-info {
    display: flex;
    position: relative;
    flex-direction: row;
    justify-content: flex-end;
    margin-right: 20rpx;
}

.info-title {
    margin-top: 20rpx;
    font-size: 22rpx;
    margin-left: 0.4ch;
}

/* 搜索框 */
.search {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 60rpx;
    background-color: whitesmoke;
    margin-top: 2%;
    margin-bottom: 2%;
    border: 1rpx solid whitesmoke;
    border-radius: 5rpx;
}

/* 搜索框提示文字样式 */
.search input {
    font-size: 30rpx;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    padding-left: 50rpx;
}

/* 搜索框小图标 */
.search image {
    width: 40rpx;
    height: 40rpx;
    padding-right: 20rpx;
}

