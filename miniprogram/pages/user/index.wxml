<!--index.wxml-->
<view class="container">
  <!--头像&昵称-->
  <view>
    <label>
      <image class='userinfo-avatar' src='{{avatar}}'></image>
      <button open-type='getUserInfo' bindgetuserinfo='getUserInfoHandler'></button>
    </label>
  </view>
  <view class="userinfo-nickname">
    <text>{{username||"点击头像登陆"}}</text>
  </view>
  <!--选项-->
  <l-list title="稍后阅读" icon="time" />
  <l-list title="收藏集" icon="favor" />
  <l-list title="阅历" icon="eye" />
  <l-list title="设置" icon="setting" />
  <l-list title="关于" icon="more" />
</view>