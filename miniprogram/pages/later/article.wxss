/* pages/home/article.wxss */

@import '../../towxml/style/main.wxss';
@import '../../towxml/style/theme/light.wxss';

.container {
  display: block;
}

.menu{
  position: fixed;
    bottom: 0;
    width: 100%;
}

.title {
  margin-top: 20rpx;
  font-family: "STHeitiTC-Light", "Microsoft YaHei Light", "Hiragino Sans GB", -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
  font-size: 42rpx;
  padding: 0 24rpx;
  font-weight: bold;
  color: #000;
  line-height: 1.35;
}

.info-box {
  font-family: "STHeitiTC-Light", "Microsoft YaHei Light", "Hiragino Sans GB", -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
  padding: 20rpx 20rpx;
  font-size: 24rpx;
  color: #666;
  margin: 15rpx 0;
  text-align: right;
  box-shadow:0 3px 3px 1px #f6f6f6;
}

.pubTime {
  margin-left: 24rpx ;
}

.pubAuthor {
  margin-left: 24rpx ;
}
.summary {
  background-color: #447EB9; 
  position: relative;
  border: 1rpx solid #447EB9;
  font-size: 24rpx;
  color: #fff;
  margin-left: 12rpx;
  margin-right: 12rpx;
  border-radius: 10rpx;
  line-height: 35rpx;
}

.progressbar{
  position:fixed;
  top:0;
  width:750rpx;
  margin-left:-20rpx;
}

.article {
  padding: 15rpx 20rpx 12rpx 20rpx;
  background-color: #fff; 
  position: relative;
  font-size: 30rpx;
  line-height: 50rpx;
  color: #333;
  letter-spacing: 2rpx;
  /* text-indent: 40rpx; */
  /* margin-bottom: 150rpx; */
}

.textattr {
  user-select: true ;
}

.footer {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 80rpx;
  font-size: 24rpx;
  color: #333;
  margin-top: 30rpx;
}

.avatar {
  border-radius: 3px;
  width:38px;
  height: 38px;
  display: inline-block;
}

.author {
  margin-top:-100rpx;
  display: block;
  margin-left:86rpx;
  font-weight: 700;
  font-size:13px;
  color: #444;
}

.bio{
font-size:12px;
display: block;
margin-left:86rpx;
}

.question-title{
  color:#259;
  font-weight: 700;
  font-size:30rpx;
}
